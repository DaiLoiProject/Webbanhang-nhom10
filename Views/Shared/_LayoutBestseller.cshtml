<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bestsellers</title>
    <link href="~/Content/page.style/Shop-StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <!-- link font google -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>

    <!--Header-->
    <section id="header">
        <!-- Navbar + logo + icons -->
        <div class="header-center-inner">
            <!-- Left: social icons -->
            <div class="header-left">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-tiktok"></i></a>
            </div>

            <!-- Center: logo -->
            <div class="header-logo">
                <a href="@Url.Action("Index", "TrangChu")">
                    <img src="~/Pictures/Phoenix.png" class="logo" alt="Phoenix" width="100" height="100" />
                </a>
            </div>

            <!-- Right: function icons -->
            <div class="header-right">
                <a href="#"><i class="fas fa-search"></i></a>
                <a href="#"><i class="fas fa-user"></i></a>
                <a href="card.html"><i class="fa-solid fa-bag-shopping"></i></a>
            </div>
        </div>

        <!-- Navbar -->
        <div>
            <ul id="navbar">
                <li><a href="@Url.Action("Index", "TrangChu")">HOME</a></li>
                <li><a href="@Url.Action("Index", "Shop")">SHOP</a></li>
                <li><a class="active" href="@Url.Action("Index", "Bestsellers")">BESTSELLERS</a></li>
                <li><a href="about.html">COLLECTIONS</a></li>
            </ul>
        </div>
    </section>

    <!--Hero-->
    <section id="hero">
        <h1>Bestsellers</h1>
        <p>Home / Bestsellers</p><br />
        <p> Thanh xuân như một tách trà </p><br />
        <p>Không săn sale sớm hết bà thanh xuân.</p><br />
        <p>Những sản phẩm hot hit nhất của shop hiện tại</p>
        <hr />
    </section>

    <!-- Container cho Sidebar và Product -->
    <div class="shop-container">
        <!-- Sidebar -->
        <aside id="sidebar">
            <ul class="sidebar-menu">
                <li class="sidebar-item">
                    <button class="sidebar-btn">Categories <i class="fa-solid fa-chevron-down"></i></button>
                    <ul class="submenu">
                        <li><a href="#">T-Shirts</a></li>
                        <li><a href="#">Hoodies</a></li>
                        <li><a href="#">Accessories</a></li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <button class="sidebar-btn">Availability <i class="fa-solid fa-chevron-down"></i></button>
                    <ul class="submenu">
                        <li><a href="#">In Stock</a></li>
                        <li><a href="#">Out of Stock</a></li>
                    </ul>
                </li>
            </ul>
        </aside>

        <!--product-->
        <section id="product1">
            <div class="pro-container">
                <div class="pro">
                    <img src="~/Content/Img/Tshirt/binh-tan-font.jpg">
                    <div class="des">
                        <h5>DirtyCoins Bình Tân Embroidered Polo Black</h5>
                        <h4>395.000₫</h4>
                    </div>
                </div>
                <div class="pro">
                    <img src="~/Content/Img/Tshirt/messi-font.jpg">
                    <div class="des">
                        <h5>DirtyCoins Striped Soccer Jersey Baby Blue White</h5>
                        <h4>395.000₫</h4>
                    </div>
                </div>
                <div class="pro">
                    <img src="~/Content/Img/Tshirt/wild-west-font.jpg">
                    <div class="des">
                        <h5>DirtyCoins Wild West Fade Relaxed Tan</h5>
                        <h4>395.000₫</h4>
                    </div>
                </div>
                <div class="pro">
                    <img src="~/Content/Img/Tshirt/Hanoi-font.jpg">
                    <div class="des">
                        <h5>Hanoi Lover T-Shirt White</h5>
                        <h4>395.000₫</h4>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!--Pagination-->
    <section id="pagination" class="section-p1">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#"><i class="fa-solid fa-greater-than"></i></a>
    </section>

    <!--script cho sidebar-->
    <script>
        const sidebarBtns = document.querySelectorAll('.sidebar-btn');
        sidebarBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const submenu = btn.nextElementSibling;
                const icon = btn.querySelector('i');
                if (submenu.style.display === 'block') {
                    submenu.style.display = 'none';
                    icon.style.transform = 'rotate(0deg)';
                } else {
                    submenu.style.display = 'block';
                    icon.style.transform = 'rotate(180deg)';
                }
            });
        });
    </script>
    <div>
        @RenderBody()
    </div>              

</body>
</html>
